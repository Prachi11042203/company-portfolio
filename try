} else {
    for (i = 0; i < 2; i++) {
        setTimeout(function () {
            if ($("label[for='vendor-search-handler']").html() == '') {
                $("label[for='vendor-search-handler']").html("search");
            }
        }, 3500);

    }
}

});
</script> 


    
